<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.smartech.creepystory" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CreepyStory"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".activity.story.liststory.ListStoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.profile.detailprofile.DetailProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.story.detail.DetailStoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.story.createstory.CreateStoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.profile.editprofile.EditProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.onboard.OnBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity
            android:name=".activity.maincontent.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" />
        <activity android:name=".base.BaseActivity" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CreepyStory.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>